{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*", "eslint.config.*"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  }
}
